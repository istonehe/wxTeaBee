<view class="container">
  <view class="user_box">
    <block wx:if="{{!hasUserInfo && canIUse}}">
      <button id="login_btn" open-type="getUserInfo" bindgetuserinfo="getUserInfo" class="beelogin"></button>
      <label for="login_btn">
        <image class="userinfo-avatar" src="../../images/bee.png" background-size="cover"></image>
      </label>
      <text class="userinfo-nickname">点击获取头像</text>
    </block>
    <block wx:else>
      <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>

  <view class="register_box">
    <view class="input_box">
      <image src="../../images/phone.png" class="input_ico"></image><input placeholder="输入手机号" placeholder-class="input_placeholder"/>
    </view>
    <view class="code_box">
      <view class="input_box">
        <image src="../../images/verify.png" class="input_ico"></image><input placeholder="输入右侧数字" placeholder-class="input_placeholder"/>
      </view>
      <image src="" class="verifyimage"></image>
    </view>
    <view class="code_box">
      <view class="input_box">
        <image src="../../images/verify.png" class="input_ico"></image><input placeholder="输入短信验证码" placeholder-class="input_placeholder"/>
      </view>
      <view class="sms_btn">
        获取验证码
      </view>
    </view>
     <view class="input_box">
      <image src="../../images/pass.png" class="input_ico"></image><input placeholder="设置密码" placeholder-class="input_placeholder" password="true"/>
    </view>
    <view class="regist_btn">
      Go
    </view>
    
  </view>
  
</view>