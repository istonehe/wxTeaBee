.container {
  justify-content: flex-start;
  font-size: 34rpx;
}

page{
  background: #f5f5f5;
}

.pageloading{
  width:100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.pageloading image{
  width:280rpx;
  height:280rpx;
  margin-top:350rpx;
}

.no_ask{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top:160rpx;
  width:100%;
  color:#aaa;
}

.sort_nav{
  position:fixed;
  top:0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  width:100%;
  background:#fff;
  border-bottom:1px solid #eee;
}

.answered_status{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width:100%;
  height:100rpx;
}

.status_selected{
  margin-left:40rpx;
}

.answers_count{
  margin-right:40rpx;
  color:#888;
}

.answers_count text{
  color:#60b657;
}

.status_selected{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  color:#333;
}

.arrow_icon{
  width:36rpx;
  height:36rpx;
  margin-left:20rpx;
}

.status_choice{
  width:100%;
}

.status_item{
  width:710rpx;
  height:100rpx;  
  margin-left:40rpx;
  border-top:1px solid #eee;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  color:#888;
}

.choice_now{
  width:22rpx;
  height:22rpx;
  border-radius: 50%;
  background: #60b657;
  margin-right:40rpx;
}
